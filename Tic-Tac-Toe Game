(3) JavaScript Code -

let boxes = document.querySelectorAll(".box");
let turn = "X";
let isGameOver = false;

boxes.forEach(box => {
    box.innerHTML = "";
    box.addEventListener("click", () => {
        if (!isGameOver && box.innerHTML === "") {
            box.innerHTML = turn;
            checkWin();
            checkDraw();
            changeTurn();
        }
    });
});

function changeTurn() {
    turn = turn === "X" ? "O" : "X";
}

function checkWin() {
    const winningCombinations = [
        [0, 1, 2], [3, 4, 5], [6, 7, 8], // Rows
        [0, 3, 6], [1, 4, 7], [2, 5, 8], // Columns
        [0, 4, 8], [2, 4, 6]             // Diagonals
    ];

    for (let i = 0; i<winningCombinations.length; i++) {
        let v0 = boxes[winningCombinations[i][0]].innerHTML;
        let v1 = boxes[winningCombinations[i][1]].innerHTML;
        let v2 = boxes[winningCombinations[i][2]].innerHTML;

        if(v0 != "" && v0 === v1 && v0 === v2) {
            isGameOver = true;
            const messageElement = document.getElementById("msg");
            messageElement.innerText = `Congratulations! ðŸŽ‰ Winner is ${v0}`;
            messageElement.classList.remove("hide");
        }
    }
}

function checkDraw() {
    if(!isGameOver) {
        let isDraw = true;
        boxes.forEach(e => {
            if(e.innerHTML === "") isDraw = false;
        })
            if(isDraw) {
                isGameOver = true;
                const messageElement = document.getElementById("msg");
                messageElement.innerText = "It's a draw! ðŸ˜";
                messageElement.classList.remove("hide");
            }
    }
}

document.getElementById("playAgainBtn").addEventListener("click", resetGame);
document.getElementById("resetBtn").addEventListener("click", resetGame);

function resetGame() {
    isGameOver = false;
    const messageElement = document.getElementById("msg");
    messageElement.classList.add("hide");

    boxes.forEach(box => {
        box.innerHTML = "";
    });

    turn = "X";
}
