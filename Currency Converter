(3) JavaScript Code - 

const a = document.getElementById('s1');
const b = document.getElementById('s2');
const c = document.getElementById('amount');
const d = document.querySelector('.display-conversion');
const e = document.getElementById('generate-btn');
const f = document.getElementById('reset-btn');

function getExchangeRates(baseCurrency) {
    return fetch(`https://api.exchangerate-api.com/v4/latest/${baseCurrency}`)
        .then(response => response.json())
        .then(data => data.rates)
        .catch(error => {
            console.error('Error fetching exchange rates:', error);
            return null;
        });
}

function generateExchangeRate() {
    const currency_one = a.value;
    const currency_two = b.value;
    const amount = parseFloat(c.value);

    getExchangeRates(currency_one)
        .then(rates => {
            if (rates) {
                const exchangeRate = rates[currency_two];
                const convertedAmount = (amount * exchangeRate).toFixed(2);
                d.innerText = `Converted Amount: ${convertedAmount} ${currency_two}`;
            }
        });
}

function resetForm() {
    c.value = '';
    a.value = 'USD';
    b.value = 'INR';
    d.innerText = 'Display conversion : ';
}

// Event listeners
e.addEventListener('click', generateExchangeRate);
f.addEventListener('click', resetForm);

// Initial calculation on page load
generateExchangeRate();
